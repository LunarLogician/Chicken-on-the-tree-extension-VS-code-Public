{
  "name": "chicken-on-tree-screaming",
  "displayName": "Chicken On Tree Screaming on Terminal Error",
  "description": "Plays a 'chicken-on-tree-screaming' sound whenever there's an error in the terminal",
  "version": "1.0.0",
  "publisher": "Zubair",
  "repository": {
    "type": "git",
    "url": "https://github.com/LunarLogician/VS-extension-Chicken-On-Tree-Screaming"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:chickenOnTreeScreaming.toggle",
    "onCommand:chickenOnTreeScreaming.testSound"
  ],
  "main": "./extension.js",
  "icon": "icon.png",

  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Chicken On Tree Screaming",
      "properties": {
        "chickenOnTreeScreaming.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the chicken-on-tree-screaming sound on terminal errors"
        },
        "chickenOnTreeScreaming.volume": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Volume level for the chicken-on-tree-screaming sound (0.0 to 1.0)"
        },
        "chickenOnTreeScreaming.errorPatterns": {
          "type": "array",
          "default": [
            "error:",
            "Error:",
            "ERROR:",
            "fail:",
            "FAIL:",
            "Failed",
            "fatal:",
            "FATAL:",
            "Exception",
            "Traceback",
            "command not found",
            "No such file"
          ],
          "description": "Patterns to detect errors in terminal output"
        }
      }
    },
    "commands": [
      {
        "command": "chickenOnTreeScreaming.toggle",
        "title": "Chicken On Tree Screaming: Toggle Error Sound"
      },
      {
        "command": "chickenOnTreeScreaming.testSound",
        "title": "Chicken On Tree Screaming: Test Sound"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/node": "16.x",
    "eslint": "^8.41.0"
  }
}
